{
  "name": "t-chatter",
  "description": "A Twitch chat client.",
  "version": "0.3.6",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "concurrently": "^5.3.0",
    "electron-store": "^6.0.1",
    "electron-updater": "^4.3.5",
    "express": "^4.17.1",
    "html-react-parser": "^0.14.2",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.1",
    "tmi.js": "^1.5.0",
    "uuid": "^8.3.1",
    "wait-on": "^5.2.0",
    "web-vitals": "^0.2.4"
  },
  "author": {
    "name": "Sebastian Vallin",
    "url": "https://t-chatter.github.io/"
  },
  "license": "MIT",
  "keywords": [
    "electron",
    "react",
    "chat",
    "twitch",
    "client",
    "cross-platform",
    "desktop",
    "app"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/T-Chatter/T-Chatter.git"
  },
  "scripts": {
    "start": "cross-env NODE_ENV=development electron .",
    "dist": "npm run build:react && npm run build:electron",
    "publish": "npm run build:react && cross-env NODE_ENV=production electron-builder --win --publish always",
    "build:react": "cross-env NODE_ENV=production react-scripts build",
    "build:electron": "cross-env NODE_ENV=production electron-builder --win --publish never",
    "watch": "npm-watch",
    "test": "react-scripts test"
  },
  "watch": {
    "build:react": {
      "patterns": [
        "src"
      ],
      "extensions": "js,jsx"
    }
  },
  "build": {
    "appId": "org.t-chatter",
    "productName": "T-Chatter",
    "copyright": "Copyright Â© 2020 Sebastian Vallin",
    "artifactName": "${productName}-${version}.${ext}",
    "mac": {
      "category": "public.app-category.video"
    },
    "directories": {
      "output": "packages",
      "buildResources": "assets"
    },
    "files": [
      "package.json",
      "build/**",
      "assets/*.png"
    ],
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "perMachine": true
    }
  },
  "main": "public/electron.js",
  "homepage": "./",
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "electron": "11.1.0",
    "electron-builder": "^22.9.1",
    "npm-watch": "^0.7.0"
  }
}
